FROM node:16-bullseye
WORKDIR /opt/server
COPY . .
EXPOSE 3000
# ENV PORT=3000
# ENV MONGO_URI=mongodb://localhost:27017/Linkedin-clone-test
ENV MONGO_URI=<YOUR_MONGO_URI>
ENV JWT_SECRET_KEY=<YOUR_SECRET_KEY>
ENV JWT_EXPIRE=60m
ENV JWT_COOKIE_EXPIRE=60
ENV RESET_PASSWORD_EXPIRE=36000000
ENV _SALTKEY=<YOUR_SECRET_KEY>
ENV SMTP_HOST=smtp.gmail.com
ENV SMTP_PORT=465
ENV SMTP_MAIL=<YOUR_EMAIL>
ENV SMTP_PASSWORD=<YOUR_EMAIL_PASSWORD>
RUN npm install
CMD ["npm","run","start"]
